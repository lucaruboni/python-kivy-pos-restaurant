<MenuScreen>:
    name: "menu"
    on_enter: app.load_categories()
    on_enter: app.update_order_summary()

    MDBoxLayout:
        md_bg_color: [1, 1, 0.1, 1]  # Sfondo giallo
        orientation: "horizontal"
        padding: "30dp"
        spacing: "5dp"

        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            size_hint_x: 0.60 
            MDGridLayout:
                cols: 3
                rows: 2
                size_hint_y: 0.3
                size_hint_x: 1 
                height: "250dp"
                spacing: "5dp"
                padding: "5dp"
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

                # RIGA SUPERIORE: Informazioni
                MDLabel:
                    id: customer_label
                    text: app.customer_name_text
                    halign: "center"
                    text_color: "black"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                MDLabel:
                    id: time_label
                    text: app.delivery_time_text
                    halign: "center"
                    text_color: "black"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                MDLabel:
                    id: articles_label
                    text: app.articles_text
                    halign: "center"
                    text_color: "black"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height

                # RIGA INFERIORE: Celle 1 e 2 vuote, cella 3 con i bottoni
                MDLabel:
                    text: ""
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                MDLabel:
                    text: ""
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height                    
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: "5dp"
                    halign: "center"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height    
                                                                
                    ClickableBox:
                        text: "Chiudi"
                        halign: "center"
                        md_bg_color: 1, 0, 0, 1
                        text_color: "black"
                        on_release: root.manager.current = "login"  # Definisci questa funzione nel tuo file Python
                    ClickableBox:
                        text: "Exit FullScreen"
                        halign: "center"
                        md_bg_color: 0, 0, 1, 1
                        text_color: "black"
                        on_release: app.toggle_fullscreen()  # Definisci questa funzione nel tuo file Python

            # Sezione 2: Area di selezione prodotti (in basso)
            AnchorLayout:
                anchor_x: "left"
                anchor_y: "bottom"            
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: "5dp"
                    size_hint_x: 1  # Occupa il 90% della larghezza del genitore
                    size_hint_y: 0.7  # Occupa il 100% della altezza del genitore
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height                     

                    # Parte alta: Griglia prodotti (4 righe x 5 colonne) + colonna verticale di 4 bottoni
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: "5dp"
                        size_hint_y: 1
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height     

                        MDGridLayout:
                            id: top_product_grid
                            cols: 5
                            rows: 4
                            size_hint_y: 1
                            spacing: "5dp"
                            padding: "5dp"
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 1
                                Line:
                                    width: 1
                                    rectangle: self.x, self.y, self.width, self.height                                 

    
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x: None
                            width: "150dp"
                            spacing: "5dp"
                            padding: "5dp"
                            ClickableBox:
                                text: "Placeholder"                            
                            ClickableBox:
                                text: "Placeholder"                            
                            ClickableBox:
                                text: "Placeholder"                            
                            ClickableBox:
                                text: "Placeholder"                            

                    # Parte bassa: Griglia prodotti (2 righe x 5 colonne)
                    MDGridLayout:
                        id: bottom_product_grid
                        cols: 5
                        rows: 2
                        size_hint_y: 0.4
                        spacing: "5dp"
                        padding: "5dp"
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height                         
                        ClickableBox:
                            text: "Placeholder"                            
                        ClickableBox:
