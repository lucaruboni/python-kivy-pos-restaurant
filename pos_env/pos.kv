<SearchProductScreen>:
    name: "search_product"
    on_enter: app.update_order_summary()

    MDBoxLayout:
        orientation: "horizontal"
        spacing: "5dp"
        padding: "10dp"
        md_bg_color: 1, 1, 1, 1

        # ---------------------------------------
        # SEZIONE SINISTRA (griglia prodotti)
        # ---------------------------------------
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 0.5
            spacing: "10dp"
            md_bg_color: [1, 1, 0.95, 1]  # Sfondo chiaro
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height              

            MDLabel:
                id: category_label
                text: "Categoria: " + app.current_category
                halign: "center"
                font_size: "24sp"
                size_hint_y: None
                padding: "40dp"
                height: self.texture_size[1]  # Altezza minima in base al testo
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height                    

            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                size_hint_y: 1
                MDGridLayout:
                    id: product_grid_search
                    cols: 4
                    spacing: "10dp"
                    padding: "20dp"
                    size_hint_y: None  
                    height: self.minimum_height
                    
        # -----------------------------
        # Sezione Centrale: Tastiera per il Filtro
        # -----------------------------
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 0.2
            spacing: "10dp"
            md_bg_color: [0.9, 0.9, 0.9, 1]

            MDLabel:
                text: "Filtra Prodotti"
                halign: "center"
                font_size: "20sp"
                padding: "40dp"
                size_hint_y: None
                height: self.texture_size[1]  # Altezza minima in base al testo
                color: 0, 0, 0, 1

            # ClickableBox "Tutti" per resettare il filtro
            ClickableBox:
                text: "Tutti"
                md_bg_color: 0.7, 0.7, 0.7, 1
                size_hint: 1, None
                height: "40dp"
                on_release: app.filter_products("")

            # Griglia della tastiera con tutte le lettere A-Z
            MDGridLayout:
                id: keyboard_grid
                cols: 4
                spacing: "5dp"
                # Creiamo manualmente i pulsanti per le 26 lettere
                ClickableBox:
                    text: "A"
                    size_hint: 1, None
                    height: "80dp"
                    on_release: app.filter_products("A")
                ClickableBox:
                    text: "B"
                    size_hint: 1, None
                    height: "80dp"
                    on_release: app.filter_products("B")
                ClickableBox:
                    text: "C"
                    size_hint: 1, None
                    height: "80dp"
                    on_release: app.filter_products("C")
                ClickableBox:
                    text: "D"
                    size_hint: 1, None
                    height: "80dp"
                    on_release: app.filter_products("D")
                ClickableBox:
                    text: "E"
                    size_hint: 1, None
                    height: "80dp"
                    on_release: app.filter_products("E")
                ClickableBox:
                    text: "F"
                    size_hint: 1, None
                    height: "80dp"
                    on_release: app.filter_products("F")
                ClickableBox:
                    text: "G"
                    size_hint: 1, None
                    height: "80dp"
                    on_release: app.filter_products("G")
