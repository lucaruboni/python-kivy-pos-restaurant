<POSPizzeriaApp@ScreenManager>:
    LoginScreen:
    OptionScreen:
    CreateCategoryScreen:
    MenuScreen:
    SearchProductScreen:
    OrderScreen:
    TimeSelectionScreen:

<ClickableBox>:
    orientation: "vertical"
    size_hint: 1, 1
    canvas.before:
        # Ombra (offset di qualche pixel in basso/destra e un po' di trasparenza)
        Color:
            rgba: 0, 0, 0, 0.2   # nero trasparente
        Rectangle:
            pos: self.x + 2, self.y - 2
            size: self.size

        # Sfondo principale
        Color:
            rgba: 1, 1, 1, 1    # colore di riempimento
        Rectangle:
            pos: self.pos
            size: self.size

        # Bordo
        Color:
            rgba: 0, 0, 0, 1    # nero
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)

    # Aggiungi un MDLabel che mostra la proprietà `text` di ClickableBox
    MDLabel:
        text: root.text
        halign: "center"
        valign: "middle"
        color: 0, 0, 0, 1

<ClickableBoxSearch>:
    orientation: "vertical"
    # Non forziamo un'altezza fissa; l'altezza sarà determinata dal contenuto
    size_hint_y: None
    # Usa un padding interno per dare spazio al testo
    padding: "50dp"
    # Il widget calcola la sua altezza minima in base al contenuto
    height: self.minimum_height
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.2
        Rectangle:
            pos: self.x + 2, self.y - 2
            size: self.size
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
    MDLabel:
        text: root.text
        halign: "center"
        valign: "middle"
        # Usa un padding interno se necessario
        padding: "5dp", "5dp"
        color: 0, 0, 0, 1


<OneLineListItem>:
    theme_text_color: "Custom"
    text_color: 0, 0, 0, 1       

        

# ----------------------------------------------------
# Schermo di Login
# ----------------------------------------------------
<LoginScreen>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        padding: "30dp"
        padding_top: "100dp"
        md_bg_color: 1, 1, 1, 1
        spacing: "10dp"
        MDLabel:
            text: "BENVENUTO"
            color: 0, 0, 0, 1
            halign: "center"
            font_size: "29sp"
            size_hint_y: 0.2
        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.5, 0.5
            padding: "50dp"  # Spazio tra l'insieme Username e l'insieme Password
            
            AnchorLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: 0.5
                    height: self.minimum_height

                    MDLabel:
                        text: "Username"
                        halign: "left"
                        size_hint_y: None
                        height: self.texture_size[1]  # Altezza minima in base al testo
                    MDTextField:
                        id: username
                        hint_text: "Inserisci il tuo username"
                        text_color_hint: 0, 0, 0, 1
                        md_bg_color: 1, 1, 1, 1
                        mode: "outlined"

            AnchorLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: 0.5
                    height: self.minimum_height
                    MDLabel:
                        text: "Password"
                        halign: "left"
                        size_hint_y: None
                        height: self.texture_size[1]
                    MDTextField:
                        id: password
                        hint_text: "Inserisci la tua password"
                        text_color_hint: 0, 0, 0, 1
                        md_bg_color: 1, 1, 1, 1
                        mode: "outlined"
                        password: True
        ClickableBox:
            text: "Log In"
            md_bg_color: 0, 0, 1, 1
            size_hint_x: 0.3
            size_hint_y: 0.3
            pos_hint: {'center_x': 0.5}
            on_release:
                app.login(username.text, password.text)

<OptionScreen>:
    name: "option"
    MDBoxLayout:
        orientation: "vertical"
        padding: "30dp"
        spacing: "20dp"
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text: "Select an Option:"
            md_bg_color: 1, 1, 1, 1
            halign: "center"
            font_size: "24sp"
        MDBoxLayout:
            orientation: "horizontal"
            spacing: "10dp"
            size_hint_y: None
            height: "60dp"
            ClickableBox:
                text: "Cash Mode"
                md_bg_color: 0, 1, 0, 1
                on_release:
                    root.manager.current = "menu"
            ClickableBox:
                text: "Create Category"
                md_bg_color: 1, 0.5, 0, 1
                on_release:
                    root.manager.current = "create_category"
        ClickableBox:
            text: "Log Out"
            md_bg_color: 1, 0, 0, 1
            on_release:
                root.manager.current = "login"
# ----------------------------------------------------
# Schermo per creare/modificare categorie
# ----------------------------------------------------
<CreateCategoryScreen>:
    name: "create_category"
    on_enter: app.load_category_chips()
    MDBoxLayout:
        orientation: "horizontal"
        padding: "20dp"
        spacing: "10dp"
        md_bg_color: 1, 1, 1, 1

        MDBoxLayout:
            orientation: "vertical"
            padding: "50dp"
            spacing: "50dp"
            size_hint_x: 0.7
            md_bg_color: 1, 1, 1, 1

            MDLabel:
                text: "Crea o modifica una Categoria Prodotto"
                color: 0, 0, 0, 1
                halign: "left"
                font_size: "24sp"

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: 0.3
                height: self.minimum_height
                padding: "-10dp"
                MDLabel:
                    text: "Nome Categoria (nuova)"
                    halign: "left"
                    size_hint_y: None
                    height: self.texture_size[1]  # Altezza minima in base al testo
                MDTextField:
                    id: new_category_name
                    hint_text: "Nome nuova categoria"
                    color: 1, 1, 1, 1
                    mode: "outlined"

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: 0.3
                height: self.minimum_height
                padding: "-10dp"
                MDLabel:
                    text: "Posizione nella griglia (1-20)"
                    halign: "left"
                    size_hint_y: None
                    height: self.texture_size[1]  # Altezza minima in base al testo
                MDTextField:
                    id: grid_slot
                    hint_text: "Posizione nella griglia (1-20)"
                    color: 1, 1, 1, 1
                    mode: "outlined"
                    input_filter: "int"  # Accetta solo numeri

            MDLabel:
                text: "Aggiungi prodotti a una categoria esistente:"
                color: 0, 0, 0, 1
                halign: "left"
                font_size: "20sp"

            ScrollView:
                size_hint_y: 0.3
                MDBoxLayout:
                    id: category_chip_box
                    orientation: "horizontal"
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height


            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: 0.3
                height: self.minimum_height
                MDLabel:
                    text: "Nome prodotto"
                    halign: "left"
                    size_hint_y: None
                    height: self.texture_size[1]  # Altezza minima in base al testo
                MDTextField:
                    id: product_name
                    hint_text: "Nome prodotto"
                    color: 1, 1, 1, 1
                    mode: "outlined"

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: 0.5
                height: self.minimum_height
                MDLabel:
                    text: "Prezzo prodotto"
                    halign: "left"
                    size_hint_y: None
                    height: self.texture_size[1]  # Altezza minima in base al testo
                MDTextField:
                    id: product_price
                    hint_text: "Prezzo prodotto"
                    color: 1, 1, 1, 1
                    mode: "outlined"
                    input_filter: "float"  # Accetta numeri decimali
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: 1
                size_hint_x: 0.4
                padding: "-5dp"
                height: self.minimum_height
                ClickableBox:
                    text: "Aggiungi Prodotto alla Categoria Selezionata"
                    md_bg_color: 0, 0.5, 1, 1
                    on_release:
                        app.add_product_to_category(product_name.text, product_price.text)

                ClickableBox:
                    text: "Salva Nuova Categoria"
                    md_bg_color: 0, 0.5, 1, 1
                    on_release:
                        app.save_category(new_category_name.text, grid_slot.text)

                ClickableBox:
                    text: "Torna alle Opzioni"
                    md_bg_color: 0.7, 0.7, 0.7, 1
                    on_release:
                        root.manager.current = "option"

        # SEPARATORE VERTICALE
        MDDivider:
            orientation: "vertical"
            size_hint_x: None
            width: "1dp"
            md_bg_color: 0, 0, 0, 1

        # PARTE DESTRA (30%) - Visualizza i prodotti della categoria selezionata
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 0.3
            spacing: "10dp"
            md_bg_color: 0.95, 0.95, 0.95, 1

            MDBoxLayout:
                orientation: "vertical"
                height: self.minimum_height
                MDLabel:
                    text: "Prezzo prodotto"
                    halign: "left"
                    size_hint_y: None
                    height: self.texture_size[1]  # Altezza minima in base al testo
                    padding: "20dp"
                    padding_x: "20dp"
                ScrollView:
                    do_scroll_y: True
                    do_scroll_x: False
                    MDGridLayout:
                        id: product_list_box
                        cols: 2
                        spacing: "40dp"
                        padding: "20dp"
                        adaptive_height: True


